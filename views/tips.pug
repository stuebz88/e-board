doctype html
html(lang="en")
    head
        title= title
        meta(charset='utf-8')
        //-meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
        //-link(rel='stylesheet', href='stylesheets/style.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    body
        .container-fluid
            .row
                .span2
                    table
                        tbody
                            tr
                                td(style='padding:0 5px 0 0')
                                    a(href='/') Home
                                td(style='padding:0 5px 0 0')
                                    a(href='/test') Login
                                td
                                    a(href='/admin') Admin
            h2 Tips
            each tip in tips
                form(method='POST',action='/admin/tips/remove')
                    .row
                        .span6
                            p=tip.text
                        .span6
                            button.btn.btn-primary(type='submit',name='deleteBtn',style='background:#FF0000',value=tip.text) Delete
            h2 Add new tip
                form(method='POST',action='/admin/tips/add')
                    .row
                        .span6
                            textarea(name='tip' rows='5' style='width:600px;')
                    .row
                        .span6
                            button.btn.btn-primary(type='submit',name='submitBtn',value='Submit') Submit
