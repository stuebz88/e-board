    script.
        var urls = ['https://i.imgur.com/FuO35Sw.jpg','https://i.imgur.com/dyorm7p.jpg',
                    'https://i.imgur.com/87xDbLK.jpg','https://i.imgur.com/bxrwKkV.jpg',
