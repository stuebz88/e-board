                    'https://i.imgur.com/q7wo9IU.jpg','https://i.imgur.com/WosKbwZ.jpg',
                    'https://i.imgur.com/8CIrjHk.jpg','https://i.imgur.com/zytGSot.jpg'];
        var pic = 0;
        var opacity = 0.1;
        function fadeOut() {
            opacity = 0.1;
            var fadeOut = setInterval(function() {
                if(Math.round(1000*opacity)===0) {
                    pic = (pic+1)%14;
                    document.getElementById('bgimg').src=urls[pic];
                    window.setTimeout(fadeIn,500);
                    clearInterval(fadeOut);
                } else {
                    opacity -= 0.00025;
                    document.getElementById('bgimg').style.opacity = opacity;
                }
            }, 5);
        }
        function fadeIn() {
            opacity = 0.0;
            var fadeIn = setInterval(function() {
                if(Math.round(1000*opacity)===100) {
                    clearInterval(fadeIn);
                } else {
                    opacity += 0.00025;
                    document.getElementById('bgimg').style.opacity = opacity;
                }
            }, 5);
        }
        setInterval(function() {
            fadeOut();
        }, 30000);
    block scripts
